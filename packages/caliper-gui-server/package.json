{
    "name": "@hyperledger/caliper-gui-server",
    "description": "Hyperledger Caliper GUI server module, for easily assembling configuration files and monitoring benchmark runs",
    "version": "0.3.1-unstable",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/hyperledger/caliper",
        "directory": "packages/caliper-gui"
    },
    "main": "index.js",
    "scripts": {
        "pretest": "npm run licchk",
        "licchk": "license-check-and-add",
        "test": "npm run lint",
        "lint": "npx eslint .",
        "nyc": "nyc mocha --recursive -t 10000",
        "start": "node app.js"
    },
    "engines": {
        "node": ">=8.10.0",
        "npm": ">=5.6.0"
    },
    "dependencies": {
        "@hyperledger/caliper-burrow": "0.3.1-unstable",
        "@hyperledger/caliper-composer": "0.3.1-unstable",
        "@hyperledger/caliper-core": "0.3.1-unstable",
        "@hyperledger/caliper-fabric": "0.3.1-unstable",
        "@hyperledger/caliper-iroha": "0.3.1-unstable",
        "@hyperledger/caliper-sawtooth": "0.3.1-unstable",
        "chalk": "1.1.3",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "js-yaml": "^3.13.1",
        "mime-types": "^2.1.24",
        "mongodb": "^3.3.0",
        "multer": "^1.4.2",
        "shelljs": "^0.8.3",
        "yargs": "14.2.0"
    },
    "devDependencies": {
        "babel-eslint": "10.0.1",
        "chai": "^3.5.0",
        "eslint": "^5.16.0",
        "license-check-and-add": "2.3.6",
        "mocha": "3.4.2",
        "nyc": "11.1.0",
        "rewire": "^4.0.0",
        "sinon": "^7.3.2"
    },
    "license-check-and-add-config": {
        "folder": ".",
        "license": "../../LICENSE.txt",
        "exact_paths_method": "EXCLUDE",
        "exact_paths": [
            "node_modules",
            ".nyc_output",
            "coverage",
            ".gitignore",
            "log",
            ".jshintrc",
            "gui-client/caliper-gui-dashboard/.gitignore"
        ],
        "file_type_method": "EXCLUDE",
        "file_types": [
            ".yml",
            ".md",
            ".html",
            ".php",
            ".log",
            ".css",
            ".scss",
            ".map",
            ".eot",
            ".ttf",
            ".woff",
            ".woff2"
        ],
        "insert_license": false,
        "license_formats": {
            "js|jsx": {
                "prepend": "/*",
                "append": "*/",
                "eachLine": {
                    "prepend": "* "
                }
            },
            "editorconfig|yaml": {
                "prepend": "#",
                "append": "#",
                "eachLine": {
                    "prepend": "# "
                }
            }
        }
    },
    "nyc": {
        "exclude": [
            "test/**"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "all": true,
        "check-coverage": false,
        "statements": 1,
        "branches": 1,
        "functions": 1,
        "lines": 1
    },
    "license": "Apache-2.0"
}
